<Window x:Class="takojsnje_sporocanje.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:takojsnje_sporocanje"
        mc:Ignorable="d"
        Title="TS"
        Height="512" Width="960"
        MinHeight="108" MinWidth="192">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Datoteka">
                <MenuItem Header="Izhod" Click="ExitApp" />
            </MenuItem>
            <MenuItem Header="Stiki">
                <MenuItem Header="Nastavitve" />
            </MenuItem>
            <MenuItem Header="Orodja">
                <MenuItem Header="Dodaj" />
                <MenuItem Header="Odstrani" />
                <MenuItem Header="Uredi" />
            </MenuItem>
        </Menu>

        <ListView Name="stiki" DockPanel.Dock="Left">
            <ListViewItem Content="Coffie"></ListViewItem>
            <ListViewItem Content="Tea"></ListViewItem>
            <ListViewItem Content="Orange Juice"></ListViewItem>
        </ListView>
        <Label Content="This is a Label control." DockPanel.Dock="Right" />
    </DockPanel>
</Window>
